#!/usr/bin/env bash

# Run w/ crontab
#
#    $ crontab -u rkerr -e
#
#         */2 * * * * /home/rkerr/bin/battery_warning
#

BATTINFO=`acpi -b | tail -1`
if [[ `echo $BATTINFO | grep Discharging` && `echo $BATTINFO | cut -f 5 -d " "` < 00:15:00 ]] ; then
    DISPLAY=:0.0 /usr/bin/notify-send "low battery" "$BATTINFO"
fi
